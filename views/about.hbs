      @import url("https://fonts.googleapis.com/css2?family=Clicker+Script&family=Roboto&display=swap");

* {
  padding: 0;
  margin: 0;
  border: 0;
  outline: 0;
  background-color: inherit;
  color: inherit;
  font-family: inherit;
  font-size: inherit;
  box-shadow: none;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: "Roboto", sans-serif;
  line-height: 1.5;
  color: var(--fg);
  background-color: var(--bg);
}
li {
  list-style: none;
}

.theme {
  --bg: #6cc8ec;
  --bg-alt: #010311;
  --fg: #000108;
  --fg-alt: #530202;
  --main: #7706f8;
  --shadow: rgba(10, 0, 0, 0.1.6) 0px 10px 36px 0px,
    rgba(10, 10, 0, 0.06) 0px 0px 0px 1px;
}

::-webkit-selection,
::selection {
  background: var(--main);
  color: var(--bg);
}

h1,
h2,
h3,
h4 {
  line-height: 1.2;
  color: var(--fg-alt);
}

h1 {
  font-size: 4rem;
}

h2 {
  font-size: 2rem;
}

h3 {
  font-size: 1.5rem;
}

h4 {
  font-size: 1.3rem;
}

ul {
  list-style-type: none;
}

a {
  text-decoration: none;
}

button {
  cursor: pointer;
}

@media (max-width: 900px) {
  h1 {
    font-size: 2.6rem;
  }
}

.btn {
  display: block;
  padding: 0.8em 1.4em;
  font-weight: 500;
  font-size: 0.9rem;
  transition: transform 0.2s ease-in-out;
}

.btn--outline {
  color: var(--main);
  border: 2px solid var(--main);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.btn--outline:focus,
.btn--outline:hover {
  color: var(--bg);
}

.btn--outline:before {
  content: "";
  position: absolute;
  background-color: var(--main);
  right: 100%;
  bottom: 0;
  left: 0;
  top: 0;
  z-index: -1;
  transition: right 0.2s ease-in-out;
}

.btn--outline:hover::before,
.btn--outline:focus::before {
  right: 0;
}

nav {
  height: 80px;
  width: 100%;
}

nav ul {
  margin-right: 40px;
}
nav li {
  display: inline-block;
  margin: 0 8px;
  line-height: 80px;
}
nav a {
  color: white;
  font-size: 15px;
  border: 1px solid transparent;
  padding: 7px 10px;
  border-radius: 3px;
}
a.active,
a:hover {
  color: var(--main);
}
nav #icon {
  color: rgb(80, 187, 230);
  font-size: 30px;
  line-height: 80px;
  float: right;
  margin-right: 40px;
  cursor: pointer;
  display: none;
}
@media (max-width: 600px) {
  nav #icon {
    text-align: right;
    display: block;
  }
  nav ul {
    position: fixed;
    width: 100%;
    height: 100vh;
    background: #2f3640;
    top: 80px;
    right: -150%;
    transition: all 0.5s;
    text-align: center;
  }
  nav li {
    display: block;
    margin: 50px 0;
    line-height: 30px;
  }
  a.active,
  a:hover {
    border: none;
  }
  nav ul.show {
    left: 0;
  }
}
.center {
  display: flex;
  align-items: center;
}

.header {
  height: 8em;
  max-width: 1100px;
  width: 95%;
  margin: 0 auto;
  justify-content: space-between;
}

main {
  max-width: 1100px;
  width: 95%;
  margin: 0 auto;
