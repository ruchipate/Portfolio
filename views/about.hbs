  margin-top: 4em;
  text-align: center;
}

.footer__link {
  font-size: 0.9rem;
  font-weight: 700;
  color: var(--fg);
}

table {
  border-spacing: 0.5rem 0;
  border-collapse: separate;
}

label {
  width: 100%;
  font-weight: bold;
}

input {
  border: 1px solid var(--fg);
  height: 32px;
  border-radius: 0.1rem;
  padding: 0 0.5rem;
}

textarea {
  border: 1px solid var(--fg);
  border-radius: 0.1rem;
  padding: 0.5rem;
}

input,
input:valid {
  border: 1px solid var(--fg);
}

input:invalid {
  border: 1px solid rgba(255, 0, 0, 0.6);
}

form > div {
  display: grid;
  margin-bottom: 1em;
}

input[type="radio"] {
  margin-top: -1px;
  vertical-align: middle;
}

fieldset {
  display: grid;
  grid-template-rows: repeat(3, 1fr);
  grid-template-columns: 1fr;
  grid-gap: 2px;
  place-items: start;
}

fieldset > span > label {
  font-weight: 300;
}

form > button {
  width: 100%;
}

.education_list {
  max-width: 1100px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(18em, 1fr));
  grid-gap: 2em;
}

.education {
  width: 100%;
  padding: 2em;
  margin: 0 auto;
  text-align: left;
  box-shadow: var(--shadow);
  border-radius: 0.4rem;
  transition: transform 0.2s linear;
  background-color: var(--main);
}

.education p,
span {
  font-weight: 100;
}

.education h3 {
  font-weight: 300;
}

@media (max-width: 968px) {
  .education_list {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 600px) {
  .header {
    height: 6em;
  }

  .section {
    margin-top: 4em;
  }

  .mainPage {
    align-items: flex-start;
    margin-top: 2em;
  }

  .footer {
    padding: 2em;
    margin-top: 3em;
