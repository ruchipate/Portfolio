}

.w3-container:after,
.w3-container:before,
.w3-panel:after,
.w3-panel:before,
.w3-row:after,
.w3-row:before,
.w3-row-padding:after,
.w3-row-padding:before,
.w3-cell-row:before,
.w3-cell-row:after,
.w3-clear:after,
.w3-clear:before,
.w3-bar:before,
.w3-bar:after {
  content: "";
  display: table;
  clear: both;
}
.w3-center {
  text-align: center !important;
}

.w3-round-xlarge {
  border-radius: 16px;
}
.w3-teal,
.w3-hover-teal:hover {
  color: #fff !important;
  background-color: #451cfa !important;
}

.w3-margin-top {
  margin-top: 16px !important;
}

.w3-opacity,
.w3-hover-opacity:hover {
  opacity: 0.6;
}


